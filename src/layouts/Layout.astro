---
import "../styles/global.css";
import { ClientRouter } from "astro:transitions";
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="shortcut icon" href="/favicon.ico" type="image/x-icon" />
    <meta name="generator" content={Astro.generator} />
    <title>FraudVision</title>
    <meta
      name="description"
      content="FraudVision es una pagina web creada para detectar posibles transacciones falsas mediante filtros inteligentes."
    />
    <ClientRouter />
  </head>
  <body class="overflow-hidden">
    <div class="fixed -z-10 h-full w-full bg-slate-950">
      <div
      class="absolute bottom-0 left-0 right-0 top-0 bg-[radial-gradient(circle_500px_at_50%_200px,#3e3e3e,transparent)]"
      >
      </div>
    </div>
    <slot />
  </body>
</html>

<style is:global>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    /* background: black; */
  }

  img {
    display: block;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }
</style>
