---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.svelte";
import GraphicsContainer from "../components/GraphicsContainer.svelte";
import OCR from "../components/img/OCR.svelte"
import Histograma from "../components/img/Histograma.svelte";
---

<Layout>
  <Header client:idle />
  <main class="h-screen flex flex-col">
    <div class="h-1/12 grid place-items-center">
      <h1 class="text-4xl font-bold text-white/75">
        Resultados del Análisis <span
          class="bg-gradient-to-r from-[#5F0672] to-[#4100E0] bg-clip-text text-transparent"
        >
          Yape
        </span>
      </h1>
    </div>

    <div class="max-w-5xl w-full mx-auto py-5">
      <div class="grid grid-cols-3 gap-8 w-full">
        <!-- Columna 1: Gráficos manejados por Svelte -->
        <GraphicsContainer client:load />

        <!-- Columna 2: Imagen -->
        <div
          class="h-full flex items-center justify-center overflow-hidden rounded-xl shadow-lg bg-white/75"
        >
          <OCR client:load/>
        </div>

        <!-- Columna 3: Botón -->
        <div class="h-full flex flex-col items-center justify-between">
          <div class="h-2/5 w-full rounded-xl overflow-hidden bg-white/75">
            <Histograma client:load/>
          </div>
          <a
            href="/dashboard"
            class="px-6 py-3 rounded-xl bg-white/75 text-black hover:bg-transparent hover:text-white/75
               transition-all duration-200 border hover:border-white/75"
          >
            Elegir otra imagen
          </a>
        </div>
      </div>
    </div>
  </main>
</Layout>
