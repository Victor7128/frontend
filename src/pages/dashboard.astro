---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.svelte";
import DropBox from "../components/DropBox.svelte";
---

<Layout>
  <script>
    if (typeof window !== "undefined") {
      const token = localStorage.getItem("access_token");
      if (!token) {
        window.location.href = "/";
      }
    }
  </script>
  <Header client:idle />
  <main class="h-full flex flex-col">
    <div class="h-1/4 grid place-items-center">
      <h1 class="text-5xl font-bold text-white/75">
        Verificar Transacción <span
          class="bg-gradient-to-r from-[#5F0672] to-[#4100E0] bg-clip-text text-transparent"
          >Yape</span
        >
      </h1>
      <h2 class="text2xl font-semibold text-white/45">
        Sube tu imagen de transacción para verificarla con filtros inteligentes.
      </h2>
    </div>
    <div class="grid place-content-center">
      <DropBox client:idle/>
    </div>
  </main>
</Layout>
